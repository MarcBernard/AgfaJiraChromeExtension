{
  "manifest_version" : 2,
  "name" : "Agfa JIRA",
  "version" : "0.3.2",

  "description" : "Adds custom actions to JIRA issue pages",

  "homepage_url": "https://github.com/blairconrad/notions/tree/master/ChromeExtensions/AgfaJira",

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "background": {
    "page": "background.html",
    "persistent": false
  },

  "page_action": {
    "default_icon": {
      "16": "icon16.png"
    },
    "default_title": "AGFA JIRA",
    "default_popup": "popup.html"
  },

  "commands": {
    "copy-title": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "Copy title"
    },
    "copy-link": {
      "suggested_key": {
        "default": "Alt+L"
      },
      "description": "Copy link as markdown"
    },
    "send-email": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Email issue"
    }
  },

  "permissions": [
    "activeTab",
    "clipboardWrite",
    "declarativeContent"
  ]
}
